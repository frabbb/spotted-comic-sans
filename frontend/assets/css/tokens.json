{
  "theme": {
    "breakpoint": { "s": "768px", "m": "1440px" },
    "color": {
      "white": "rgb(255, 255, 255)",
      "black": "rgb(0, 0, 0)",
      "black-transparent": "rgba(0, 0, 0, 0.75)",
      "white-transparent": "rgba(255, 255, 255, 0.75)",
      "grey": {
        "100": "rgba(220, 220, 220, 0.5)",
        "300": "rgb(230, 230, 230)",
        "500": "rgb(200, 200, 200)",
        "700": "rgb(150, 150, 150)",
        "900": "rgb(50, 50, 50)"
      }
    },
    "spacing": {
      "0": "0px",
      "xs": "4px",
      "s": { "default": "8px", "s": "10px" },
      "m": { "default": "18px", "s": "24px" },
      "l": "48px",
      "xl": { "default": "48px", "s": "64px", "m": "80px" },
      "2xl": { "default": "80px", "s": "96px", "m": "128px" },
      "icon": { "default": "14px" },
      "caption": "60px",
      "slider": "50vh"
    },
    "radius": {
      "DEFAULT": "4px"
    },
    "ease": "cubic-bezier(0.4, 0, 0.2, 1)",
    "blur": {
      "DEFAULT": "100px"
    },
    "aspect": { "video": "16/9", "thumb": "4/5" }
  },
  "fonts": {
    "sans": {
      "font-family": "Comic Sans",
      "font-weight": "500",
      "font-style": "normal",
      "src": "url('/fonts/ComicSansMS3.ttf') format('truetype')"
    }
  },
  "utilities": {
    "typo-year": {
      "font-family": "var(--font-sans)",
      "font-size": { "default": "30vw" },
      "line-height": "1"
    },
    "typo-month": {
      "font-family": "var(--font-sans)",
      "font-size": { "default": "18vw" },
      "line-height": "1"
    },
    "typo-2xl": {
      "font-family": "var(--font-sans)",
      "font-size": { "default": "40vw", "s": "20vw" },
      "line-height": "1"
    },
    "typo-xl": {
      "font-family": "var(--font-sans)",
      "font-size": { "default": "35px" },
      "line-height": "1.2"
    },
    "typo-l": {
      "font-family": "var(--font-sans)",
      "font-size": { "default": "20px", "s": "24px" },
      "line-height": "1.2"
    },
    "typo-m": {
      "font-family": "var(--font-sans)",
      "font-size": { "default": "18px" },
      "line-height": "1.2"
    },
    "typo-s": {
      "font-family": "var(--font-sans)",
      "font-size": { "default": "16px" },
      "line-height": "1.2"
    },
    "typo-xs": {
      "font-family": "var(--font-sans)",
      "font-size": { "default": "13px" },
      "line-height": "1.2"
    }
  }
}
